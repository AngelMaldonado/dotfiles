// TODO: set tab size to 2
// TODO: set format of {...} to be on the same line
// TODO: set terminal profile to built in terminal of vs code
{
    "breadcrumbs.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "files.autoSave": "afterDelay",
    "git.openRepositoryInParentFolders": "always",
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": false,
        "scminput": false
    },
    "markdown-pdf.displayHeaderFooter": false,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    "window.commandCenter": false,
    "window.zoomLevel": 2,
    "workbench.activityBar.location": "hidden",
    "workbench.commandPalette.showCommandId": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.layoutControl.enabled": false,

    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // Navigation
        { "before": ["<S-h>"], "commands": [":bp"] },
        { "before": ["<S-l>"], "commands": [":bn"] },
        // Treeview
        { "before": ["leader", "e"], "commands": ["workbench.explorer.fileView.focus"] },
        // Panes
        { "before": ["leader", "s"], "commands": [":split"] },
        { "before": ["leader", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] }
    ],
    "workbench.tree.enableStickyScroll": false,
    "hediet.vscode-drawio.resizeImages": null
}