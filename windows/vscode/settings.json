{
    /* Resets */
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "explorer.compactFolders": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.commandPalette.showCommandId": true,
    "workbench.editor.showTabs": "none",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.layoutControl.enabled": false,
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,
    "window.zoomLevel": 2,
    /* Theme */
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Shades of Purple",
    /* Editor */
    "editor.inlineSuggest.enabled": true,
    "editor.lineNumbers": "relative",
    "editor.formatOnSave": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // Navigation
        { "before": ["<S-h>"], "commands": [":bp"] },
        { "before": ["<S-l>"], "commands": [":bn"] },
        // File tree
        { "before": ["leader", "e"], "commands": ["workbench.files.action.focusFilesExplorer"] },
        // Panes
        { "before": ["leader", "s"], "commands": [":split"] },
        { "before": ["leader", "v"], "commands": [":vsplit"] }, 
        { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] }
    ],
    /* Terminal */
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    /* Extensions */
    "hediet.vscode-drawio.resizeImages": null,
    "hediet.vscode-drawio.theme": "automatic",
    "hediet.vscode-drawio.codeLinkActivated": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "git.openRepositoryInParentFolders": "always",
    "markdown-pdf.displayHeaderFooter": false,
    "files.associations": { ".env*": "dotenv" },
    "dotenv.enableAutocloaking": false,
    "gitlens.launchpad.indicator.enabled": false,
    "emmet.preferences": { "output.inlineBreak": 1 }
}